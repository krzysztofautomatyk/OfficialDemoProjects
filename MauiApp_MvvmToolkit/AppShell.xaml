<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiApp_MvvmToolkit.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MauiApp_MvvmToolkit"
    xmlns:views="clr-namespace:MauiApp_MvvmToolkit.Views"
    Shell.FlyoutBehavior="Flyout"
    Shell.NavBarIsVisible="True">


    <ShellContent
        Title="Products"
        ContentTemplate="{DataTemplate views:ProductView}"
        Route="ProductView" />

    <ShellContent
        Title="Cart"
        ContentTemplate="{DataTemplate views:CartView}"
        Route="CartView" />

</Shell>